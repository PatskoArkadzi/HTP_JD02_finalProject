<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>Cinema</display-name>
	<servlet>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>NewUserControllerServlet</servlet-name>
		<servlet-class>by.htp.cinema.web.controllers.NewUserController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OldControllerServlet</servlet-name>
		<servlet-class>by.htp.cinema.web.controllers.OldController</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewUserControllerServlet</servlet-name>
		<url-pattern>/newapp</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OldControllerServlet</servlet-name>
		<url-pattern>/oldapp</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:cinema-main.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>by.htp.cinema.web.filters.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>